<Page x:Class="Diary.Presentation.Views.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diary.Presentation.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCategoryPage">

    <DockPanel>
        <Label DockPanel.Dock="Top" Content="Новая категория" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" FontSize="40"/>
        <TextBox DockPanel.Dock="Top" Height="Auto" Text="{Binding CategoryName, UpdateSourceTrigger=PropertyChanged}" FontSize="30"/>
        <Button DockPanel.Dock="Bottom" Height="60" VerticalAlignment="Bottom" Content="Добавить категорию" FontSize="30" Command="{Binding AddCommand}"/>
    </DockPanel>

</Page>
